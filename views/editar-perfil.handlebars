<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input value={{usuario.nombre}} type="text" name="nombre" placeholder="Ej. RaÃºl Silva Gonzalez">
        </div>

        <div class="campo">
            <label>E-mail</label>
            <input value={{usuario.email}} type="email" name="email" placeholder="Ej. ejemplo@ejemplo.com">
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu password">
        </div>

        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" placeholder="Inserta tu Imagen de Perfil">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>