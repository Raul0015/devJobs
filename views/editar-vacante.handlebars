<main class="contenedor">
  <form
    action="/vacantes/editar/{{vacante.url}}"
    method="POST"
    class="default-form"
  >
    <h3>Informaci贸n General</h3>

    <div class="campo">
      <label>Titulo</label>
      <input
        type="text"
        name="titulo"
        placeholder="React Developer"
        value="{{vacante.titulo}}"
      />
    </div>

    <div class="campo">
      <label>Empresa</label>
      <input
        type="text"
        name="empresa"
        placeholder="Spotify"
        value="{{vacante.empresa}}"
      />
    </div>

    <div class="campo">
      <label>Ubicaci贸n</label>
      <input
        type="text"
        name="ubicacion"
        placeholder="CDMX"
        value="{{vacante.ubicacion}}"
      />
    </div>

    <div class="campo">
      <label>Salario (USD)</label>
      <input
        type="text"
        name="salario"
        placeholder="$800 USD"
        value="{{vacante.salario}}"
      />
    </div>

    <div class="campo">
      <label>Contrato</label>
      <select name="contrato">
        {{#tipoContrato vacante.contrato}}
          <option value="" disabled selected>-- SELECCIONA --</option>
          <option value="Freelance">Freelance</option>
          <option value="Tiempo Completo">Tiempo Completo</option>
          <option value="Medio Tiempo">Medio Tiempo</option>
          <option value="Por Proyecto">Por Proyecto</option>
        {{/tipoContrato}}
      </select>
    </div>

    <h3>Descripci贸n del Puesto</h3>

    <div class="campo descripcion">
      <label>Descripci贸n</label>
      <input
        type="hidden"
        value="{{{vacante.descripcion}}}"
        id="x"
        name="descripcion"
      />
      <trix-editor input="x"></trix-editor>
    </div>

    <h3>Conocimientos</h3>
    <ul class="lista-conocimientos">
      {{#seleccionarSkills vacante.skills}}{{/seleccionarSkills}}
    </ul>

    <div class="campo centrar-horizontal">
      <input type="hidden" name="skills" id="skills" />
      <input type="submit" value="Guardar Cambios" class="btn btn-azul" />
    </div>
  </form>
</main>